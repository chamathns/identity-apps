/*-------------------------------
    Application Quickstart Tab
--------------------------------*/

.technology-selection-wrapper {
    background: #3e3e3e;
    padding: 8em 0 !important;

    .heading, .new-app-greeting {
        color: @white !important;
    }

    .text-typography {
        color: @dustyGray !important;
    }

    .custom-configuration {
        margin: auto;
        width: 500px;
    }
}

.application-sample-config-editor {
    .CodeMirror {
        min-height: @applicationSampleConfigEditorMinHeight;
        height: @applicationSampleConfigEditorHeight;
    }
}

.code-block {
    border-radius: @defaultBorderRadius;

    &.command {
        &.dark {
            color: @darkCodeBlockColor;
            background-color: @darkCodeBlockBgColor;
        }
    }
}

.download-illustration {
    justify-content: left;
}

.tech-selection-cards {
    .tech-selection {
        &:not(:last-child) {
            margin-right: 3em !important;
        }
    }
}

.tech-selection {
    background: darken(@nobel, 20) !important;
    border-color: @nobel !important;
    transition: none !important;
    min-width: 125px;
    padding: 1em !important;

    svg {
        height: 50px;
        width: 50px;
    }

    .description {
        font-size: 1.4em;
        color: @white !important;
    }

    &:hover {
        transform: none !important;
        border: 1px solid lighten(@nobel, 20) !important;
        background: @nobel !important;
        box-shadow: none !important;
        text-decoration: none !important;
    }

    &.selected {
        background-color: lighten(@primaryColor, 40) !important;
        border: 1px solid @primaryColor !important;
    }
    &.disabled {
        cursor: not-allowed !important;
    }
}

.code-segment {
    border: 1px solid @defaultBorderColor;

    .tab {
        border-right: 1px solid @defaultBorderColor !important;
        border-left: 1px solid @defaultBorderColor !important;
    }

    .item {
        padding: 1.5em !important;
    }

    .CodeMirror-sizer {
        max-width: 80vw !important;
    }
}

.quick-start-step-container {
    counter-reset: my-sec-counter;
    position: relative;

    .step-content {

        .step-previous {
            border: none !important;
            outline: none;
            background: none;
        }

        .code-segment {
            position:relative;

            .action-buttons {
                position: absolute;
                right: 1em;
                z-index: 100;

                button {
                    margin: 1em 1em 1em 0;
                    float: right;
                }

                .copy-config {
                    visibility: hidden;
                }
            }

            &:hover {
                .action-buttons {
                    .copy-config {
                        visibility: visible;
                    }
                }
            }
        }

        .secondary.menu {
            margin: 0 !important;
        }

        .segment.tab{
            padding: 0 !important;
        }

        .message {
            p {
                line-height: 2.5em;
            }

            &::after {
                content: "";
                clear: both;
                display: block;
            }
        }

        .sample-action-button {
            line-height: 2.5em;

            &.download {
                background-color: @white !important;
            }

            &.github {
                &:hover {
                    background-color: lighten(@galleryGray, 5) !important;
                }
            }
        }
    }

    .step-content-container {
        padding-left: @quickStartStepPaddingLeft;
        margin-top: @quickStartStepMarginTop;
    }

    .quick-start-step {
        line-height: 28px;
        position: relative;

        &.initial {
            height: 70px;
            &:before {
                background-color: #C3C3C3 !important;
            }

            .step-content {
                height: 1.5em;
                visibility: hidden !important;
            }
        }

        &.complete {
            height: 70px;
            &::before {
                -ms-transform: scaleX(-1) rotate(-35deg)!important;
                -webkit-transform: scaleX(-1) rotate(-35deg)!important;
                transform: scaleX(-1) rotate(-44deg)!important;
                content: "L"!important;
                font-size: 1.2em!important;
                line-height: 1.9em !important;
            }
            .step-content {
                visibility: hidden !important;
                height: 2em !important;
            }
        }
    }

    .quick-start-step::before {
        counter-increment: my-sec-counter;
        content: counter(my-sec-counter);
        display: inline-block;
        width: 30px;
        height: 30px;
        margin: 0 15px 0 0;
        border-radius: 100%;
        text-align: center;
        background-color: @nobel;
        color: #fff;
        line-height: 2.1em;
    }

    .quick-start-step::after {
        width: 1px;
        height: 100%;
        content: "";
        position: absolute;
        z-index: -1;
        top: 1%;
        bottom: 0;
        left: 14px;
        border-left: 2px dashed @defaultBorderColor;
    }

    .quick-start-step:last-child::after {
        border:none !important;
    }
}


/* Computer */
@media only screen and (max-width: @largeMonitorBreakpoint) {
    .developer-portal.page {
        &.getting-started-page {
            .ui.grid>.row>[class*="sixteen wide"].column {
                &.stackable {
                    &:not(:first-child) {
                        padding-top: @gettingStartedPageStackableGridColumnsPaddingTop;
                    }
                    &:not(:last-child) {
                        padding-bottom: @gettingStartedPageStackableGridColumnsPaddingBottom;
                    }
                }
            }
        }
    }
}

@media only screen and (max-width: 485px) {
    .developer-portal.page {
        &.getting-started-page {
            .section-card {
                background-image: @gettingStartedPageSectionCardsMobileScreenBackgroundImage;
            }
        }
    }
}

@media (max-width: @tabletBreakpoint) and (min-width: 485px) {
    .developer-portal.page {
        &.getting-started-page {
            .section-card {
                .content {
                    width: 60% !important;
                }
            }
        }
    }
}

@media only screen and (min-width: @computerBreakpoint) {
    .code-segment  {
        .CodeMirror-sizer {
            max-width: 65vw !important;
        }
    }
}

@media only screen and (max-width: @computerBreakpoint) and (min-width: @tabletBreakpoint) {
    .code-segment  {
        .CodeMirror-sizer {
            max-width: 55vw !important;
        }
    }
}

