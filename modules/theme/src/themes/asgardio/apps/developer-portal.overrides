.ui.button.feedback {
    background: transparent;
    border: @defaultBorderWidth solid @galleryGray;
    color: @galleryGray;

    &:hover {
        background: lighten(@asgardeoBlack, 10);
    }

    .feedback-icon {
        margin: @feedbackIconMargin;
        display: block;
        float: @feedbackIconFloat;
        fill: @galleryGray;
    }
}

