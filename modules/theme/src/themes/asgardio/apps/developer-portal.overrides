        .section-card {
            min-height: @gettingStartedPageSectionCardMinHeight;
            padding: @gettingStartedPageSectionCardPadding;

            &.auth-demo-card {
                background-repeat: @gettingStartedPageAuthDemoCardBackgroundRepeat;
                background-position: @gettingStartedPageAuthDemoCardBackgroundPosition;
                background-size: @gettingStartedPageAuthDemoCardBackgroundSize;
                background-color: @gettingStartedPageAuthDemoCardBackgroundColor;
                background-origin: @gettingStartedPageAuthDemoCardBackgroundOrigin;
                padding-right: @gettingStartedPageAuthDemoCardPaddingRight;

                .content {
                    .ui {

                        &.header {
                            color: #fff;
                        }

                        &.button {
                            color: @gettingStartedPageAuthDemoCardActionColor;
                        }
                    }

                    .text-typography {
                        color: #fff;
                    }
                }
            }

            &.integration-card {
                background-repeat: @gettingStartedPageIntegrationCardBackgroundRepeat;
                background-position: @gettingStartedPageIntegrationCardBackgroundPosition;
                background-color: @gettingStartedPageIntegrationCardBackgroundColor;
                background-origin: @gettingStartedPageIntegrationCardBackgroundOrigin;

                .content {

                    .ui {

                        &.header {
                            color: @gettingStartedPageIntegrationCardHeaderColor;
                        }

                        &.button {
                            color: @gettingStartedPageIntegrationCardActionColor;
                        }
                    }

                    .text-typography {
                        color: @gettingStartedPageIntegrationCardDescriptionColor;
                    }
                }
            }

            &.business-users-card {
                background-repeat: @gettingStartedPageBusinessUsersCardBackgroundRepeat;
                background-position: @gettingStartedPageBusinessUsersCardBackgroundPosition;
                background-color: @gettingStartedPageBusinessUsersCardBackgroundColor;
                background-origin: @gettingStartedPageBusinessUsersCardBackgroundOrigin;

                .content {

                    .ui {

                        &.header {
                            color: @gettingStartedPageBusinessUsersCardHeaderColor;
                        }

                        &.button {
                            color: @gettingStartedPageBusinessUsersCardActionColor;
                        }
                    }

                    .text-typography {
                        color: @gettingStartedPageBusinessUsersCardDescriptionColor;
                    }
                }
            }

            &.mfa-card {
                background-repeat: @gettingStartedPageMFACardBackgroundRepeat;
                background-size: @gettingStartedPageMFACardBackgroundSize;
                background-position: @gettingStartedPageMFACardBackgroundPosition;
                background-color: @gettingStartedPageMFACardBackgroundColor;
                background-origin: @gettingStartedPageMFACardBackgroundOrigin;

                .content {
                    margin: 0 15em 0 0;

                    .ui {

                        &.header {
                            color: @gettingStartedPageMFACardHeaderColor;
                        }

                        &.button {
                            color: @gettingStartedPageMFACardActionColor;
                        }
                    }

                    .text-typography {
                        color: @gettingStartedPageMFACardDescriptionColor;
                    }
                }
            }

            &.social-login-card {
                background-repeat: @gettingStartedPageSocialLoginCardBackgroundRepeat;
                background-size: @gettingStartedPageSocialLoginCardBackgroundSize;
                background-position: @gettingStartedPageSocialLoginCardBackgroundPosition;
                background-color: @gettingStartedPageSocialLoginCardBackgroundColor;
                background-origin: @gettingStartedPageSocialLoginCardBackgroundOrigin;

                .content {
                    margin: 0 15em 0 0;

                    .ui {

                        &.header {
                            color: @gettingStartedPageSocialLoginCardHeaderColor;
                        }

                        &.button {
                            color: @gettingStartedPageSocialLoginCardActionColor;
                        }
                    }

                    .text-typography {
                        color: @gettingStartedPageSocialLoginCardDescriptionColor;
                    }
                }
            }

            .content.extra.action-container {
                border-top: 0 !important;

                .quick-start-action {
                    text-align: left;
                    padding: 8px 8px 8px 0;

                    &:hover {
                        .quick-start-action-text {
                            text-decoration: underline;
                        }
                    }
                }
            }
        }

        .support-section {
            display: @gettingStartedPageSupportSectionDisplay;

            .icon.headphones {
                font-size: @gettingStartedPageSupportHeadphoneIconFontSize;
                margin: @gettingStartedPageSupportHeadphoneIconMargin;
            }
